<squarespace:query collection="home-hero-banner">
                       {.repeated section items}
                        {@|apply hero-banner.block}
                        {.end}
                     </squarespace:query>

<section class="types-of-users features">
                             <div class="common-contents center">
                                 <h3 class="prm-clr ft-35 fw-bold">{collection.title}</h3>
                                 <p>{collection.description}</p>
                             </div>
                             <div class="container">
                                 <div class="row">
                                 
                                    {.repeated section items}
                                     <div class="col-md-3">
                                         <div class="users-box">
                                             <div class="user-boc-icon">
                                                 <img src="{assetUrl}" alt="user-points">
                                             </div>
                                             <h3 class="center white ft-22 fw-bold">{title}</h3>
                                             {body}
                                         </div>
                                     </div>
                                    {.end}
                                    
                                 </div>
                             </div>
                         </section>